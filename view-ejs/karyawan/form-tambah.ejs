<h1>Input Karyawan Baru</h1>
<hr>
<form action="/karyawan/proses-insert" method="post">
    <label>Nama Lengkap</label>
    <input type="text" id="nama_lengkap" name="form_nama_lengkap">
    <br><br>

    <label>Gender</label>
    <br>
    <input type="radio" id="gender_M" nama="form_gender" value="M">
    <label>Male</label><br>

    <input type="radio" id="gender_F" nama="form_gender" value="F">
    <label>Female</label><br>
    <br>

    <label>Alamat</label>
    <textarea id="alamat" name="form_alamat"></textarea>
    <br><br>

    <label>Nomor Induk Pegawai</label>
    <input type="text" id="nip" name="form_nip">
    <br><br>

    <button type="submit">Save</button>
</form>