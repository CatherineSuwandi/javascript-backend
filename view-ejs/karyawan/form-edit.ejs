<h1>Input Karyawan Baru</h1>
<hr>
<form action="/karyawan/proses-update/<%= pegawai[0].id %>" method="post">
    <label>Nama Lengkap</label>
    <input type="text" id="nama_lengkap" name="form_nama_lengkap" value=" <%= pegawai[0].nama %>" required>
    <br><br>

    <label>Gender</label>
    <br>
    <input type="radio" id="gender_m" name="form_gender" value="M" <%= (pegawai[0].gender == 'M') ? 'checked' : '' %> required>
    <label>Male</label><br>

    <input type="radio" id="gender_f" name="form_gender" value="F" <%= (pegawai[0].gender == 'F') ? 'checked' : '' %> required>
    <label>Female</label><br>
    <br>

    <label>Alamat</label>
    <textarea id="alamat" name="form_alamat" required><%= pegawai[0].alamat %></textarea>
    <br><br>

    <label>Nomor Induk Pegawai</label>
    <input type="text" id="nip" name="form_nip" value=" <%= pegawai[0].nip %>" required>
    <br><br>

    <label>Department</label>
    <select name="form_department" id="department" required>
        <option value="">--pilih--</option>
        <% for (let i = 0; i < dept.length; i++) { %>
            <option <%= (pegawai[0].department_id == dept[i].id ) ? 'selected' : '' %> value="<%= dept[i].id %>"><%= dept[i].nama %></option>   
     <%   } %>
    </select> <br> <br>


    <label>Agama</label>
    <select name="form_agama" id="agama" required>
        <option value="">--pilih--</option>
        <% for (let i = 0; i < agm.length; i++) { %>
            <option <%= (pegawai[0].agama_id == agm[i].id ) ? 'selected' : '' %> value="<%= agm[i].id %>"><%= agm[i].nama %></option>   
     <%   } %>
    </select> <br> <br>


    <button type="submit">Save</button>
</form>

<pre>
    <%=   JSON.stringify(pegawai, null) %>
</pre>