<style>
    .padding-td {
        padding: 5px;
    }
</style>


<h1>Data Seluruh Karyawan PT Penacony</h1>
<hr>
<a href="Karyawan/tambah">
    <button style="margin-bottom: 5px; background-color: lightblue;">
        Add
    </button>
</a>
<table border="'1">
    <thead>
        <tr>
            <th class="padding-td">Nama</th>
            <th class="padding-td">Gender</th>
            <th class="padding-td">NIP</th>
            <th class="padding-td" colspan="2">Pilihan</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < karyawan.length; i++) { %>
        <tr>
            <td class="padding-td"><%= karyawan[i].nama %></td>
            <td class="padding-td"><%= karyawan[i].gender %></td>
            <td class="padding-td"><%= karyawan[i].nip %></td>
            <td class="padding-td">
                <a href="/karyawan/detail/<%= karyawan[i].id %>">
                    <button>lihat detail</button>
                </a>
            </td>
            <td>
                <a href="/karyawan/hapus/<%= karyawan[i].id %>" 
                    onclick="return confirm('Confirm Deletion of <%= karyawan[i].nama %> ?' )">
                    <button style="background-color: red; color: white;">Delete</button>
                </a>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>